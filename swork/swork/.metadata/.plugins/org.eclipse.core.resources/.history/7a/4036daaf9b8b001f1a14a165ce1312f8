<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserDAO">

	<resultMap type="#modelname" id="YourResultSet">
		<id property="param1" column="columnname1" />
		<result property="param2" column="columnname2" />
		<result property="param3" column="columnname3" />
	</resultMap>

	<select id="getUser" resultType="com.springbook.biz.user.UserVO">
		SELECT * FROM USERS WHERE ID = #{id} AND PASSWORD = #{password}
	</select>

	<insert id="joinUser">
		INSERT INTO USERS VALUES (#{id},#{password},#{name},#{role})
	</insert>

	<update id="updateUser">
		UPDATE USERS SET PASSWORD = #{password}, NAME = #{name}, ROLE = #{role} WHERE ID = #{id}
	</update>

	<delete id="delUser">
		DELETE FROM USERS WHERE ID = #{id}
	</delete>

	<select id="selUser" resultType="com.springbook.biz.user.UserVO">
		SELECT * FROM USERS WHERE ID = #{id}
	</select>
	
	<select id="userList" parameterType="string" resultType="user">
		SELECT * FROM USERS WHERE 1=1
		<if test="keyword != null">
			AND ID LIKE CONCAT('%', #{keyword}, '%')
			OR NAME LIKE CONCAT('%', #{keyword}, '%')
		</if>
	</select>

</mapper>
