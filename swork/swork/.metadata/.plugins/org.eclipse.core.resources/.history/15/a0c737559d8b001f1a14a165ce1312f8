<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="UserDAO">

	<resultMap type="com.springbook.biz.user.UserVO" id="userMap">
		<!-- id태그는 반드시 테이블의 Primary Key인 컬럼에만 기술. result로 사용해도 에러 X -->
		<id property="id" column="ID" />
		<result property="name" column="NAME" />
		<result property="role" column="ROLE" />
	</resultMap>

	<select id="getUser" resultMap="객체명">
		SELECT ID, NAME, ROLE FROM USERS WHERE ID = #{id} AND PASSWORD = #{password}
	</select>

	<insert id="joinUser">
		INSERT INTO USERS VALUES (#{id},#{password},#{name},#{role})
	</insert>

	<update id="updateUser">
		UPDATE USERS SET PASSWORD = #{password}, NAME = #{name}, ROLE = #{role} WHERE ID = #{id}
	</update>

	<delete id="delUser">
		DELETE FROM USERS WHERE ID = #{id}
	</delete>

	<select id="selUser" resultType="com.springbook.biz.user.UserVO">
		SELECT * FROM USERS WHERE ID = #{id}
	</select>
	
	<!-- 여러 줄이든 1줄이든 받을 자료형을 기술하면 됨. 여러 줄일 경우 자동으로 여러줄 가져옴. -->
	<select id="userList" parameterType="string" resultType="com.springbook.biz.user.UserVO">
		SELECT * FROM USERS WHERE 1=1
		<if test="keyword != null">
			AND ID LIKE CONCAT('%', #{keyword}, '%')
			OR NAME LIKE CONCAT('%', #{keyword}, '%')
		</if>
	</select>

</mapper>
